{
  "name": "cdburgess/bggapi",
  "description": "PHP Library - BoardGameGeek XML API2",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Chuck Burgess",
      "email": "cdburgess@gmail.com"
    }
  ],
  "require": {
    "php": ">=8.3",
    "ext-simplexml": "*"
  },
  "require-dev": {
    "pestphp/pest": "^3.7",
    "squizlabs/php_codesniffer": "^3.11",
    "mockery/mockery": "^1.6"
  },
  "autoload": {
    "psr-4": {
      "cdburgess\\bggapi\\": "src/"
    }
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
